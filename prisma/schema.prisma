generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url       = env("DIRECT_URL")
}

model User {
  id       Int     @id @default(autoincrement())
  auth0Id  String  @unique
  email    String  @unique
  role     Role  @default(CareWorker)
  shifts   Shift[]
worksites Worksite[] @relation("ManagerWorksites")
}

model Shift {
  id        Int      @id @default(autoincrement())
  user      User     @relation(fields: [userId], references: [id])
  userId    Int
 worksite   Worksite  @relation(fields: [worksiteId], references: [id])
  worksiteId Int
  clockIn   DateTime
  clockOut  DateTime?
  location  String?
  note      String?   // <-- optional note on clock-out
}

model Worksite {
  id         Int       @id @default(autoincrement())
  name       String
  latitude   Float
  longitude  Float
  radius     Float     // meters
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt // auto-updates on change
// Link to manager
  manager    User      @relation("ManagerWorksites", fields: [managerId], references: [id])
  managerId  Int

  // Link to shifts
  shifts     Shift[]
}

enum Role {
    Manager
    CareWorker
  }
